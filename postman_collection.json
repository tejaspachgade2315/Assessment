    {
      "name": "Session",
      "item": [
        {
          "name": "Create Session",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/session",
              "host": ["{{base_url}}"],
              "path": ["api", "session"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Frontend Tech Quiz\",\n  \"questions\": [\n    {\n      \"questionText\": \"Which JS framework do you prefer?\",\n      \"options\": [\n        { \"optionText\": \"React\" },\n        { \"optionText\": \"Vue\" },\n        { \"optionText\": \"Angular\" }\n      ]\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get All Sessions",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/session",
              "host": ["{{base_url}}"],
              "path": ["api", "session"]
            }
          }
        },
        {
          "name": "Get Session by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/session/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "session", ":id"]
            }
          }
        },
        {
          "name": "Update Session (Start/Stop)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/session/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "session", ":id"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Vote",
      "item": [
        {
          "name": "Join Session via Join Code",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/vote/join/:joinCode",
              "host": ["{{base_url}}"],
              "path": ["api", "vote", "join", ":joinCode"]
